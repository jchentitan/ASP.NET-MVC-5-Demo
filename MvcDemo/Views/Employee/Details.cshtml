@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<table>
    <tr>
        <td>
            ID
        </td>
        <td>
            @Model.EmployeeId
        </td>
    </tr>
    <tr>
        <td>
            Name
        </td>
        <td>
            @Model.Name
        </td>
    </tr>
    <tr>
        <td>
            Gender
        </td>
        <td>
            @Model.Gender
        </td>
    </tr>
    <tr>
        <td>
            City
        </td>
        <td>
            @Model.City
        </td>
    </tr>
    <tr>
        <td>
            Department
        </td>
        <td>
            @Model.DepartmentId
        </td>
    </tr>
</table>

<div>
    @Html.ActionLink("Back to employee list", "Index", new { departmentId = Model.DepartmentId })
</div>